{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "@/*": ["packages/*"]
        }
    },
    "include": ["packages/**/*.ts", ".eslintrc.js"],
    "exclude": ["node_modules", "dist"]
}
